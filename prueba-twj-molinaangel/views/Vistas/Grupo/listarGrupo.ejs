<h1>Lista de Grupos</h1>

<div class="row">
  <div class="col-sm-9">
    <p>Aqui se listan todos los grupos</p>
  </div>
  <div class="col-sm-3">
    <a href="/CrearGrupo" class="btn btn-block btn-success">
      Crear Grupo
    </a>
  </div>
</div>
<br>


<% for(var i=0; i<grupos.length; i++) {%>
<div class="row ma-margen-top-bottom">
  <div class="col-sm-1"></div>
  <div class="col-sm-4">
    <div class="text-center ma-borde ma-padding-top-bottom">
      <h1> G : <%= grupos[i].nombreGrupo %></h1>
      <input type="hidden" name="idGrupo" value="<%= grupos[i].idGrupo %>">
    </div>
  </div>
  <div class="col-sm-1"></div>
  <div class="col-sm-5 text-center">
    <div class="text-center ma-borde" style="margin-top: 40px;">
      <p>
        # Est: <%= grupos[i].numeroMaximoEstudiantes %>
      </p>
      <p>
        M: <%= grupos[i].idMateria%>
        <% console.log(grupos[i].idMateria) %>
      </p>
    </div>
  </div>
  <div class="col-sm-1">
    <a href="/Grupo/BorrarGrupo?id=<%= grupos[i].id %>" class="btn btn-danger btn-block">X</a>
    <a href="/EditarGrupo?id=<%= grupos[i].id %>" class="btn btn-info btn-block">Edit</a>
  </div>
</div>
<% }%>


