<h1>Lista de Materias</h1>

<div class="row">
  <div class="col-sm-9">
    <p>Aqui se listan todos las materias</p>
  </div>
  <div class="col-sm-3">
    <a href="/CrearMateria" class="btn btn-block btn-success">
      Crear Materia
    </a>
  </div>
</div>
<br>


<% for(var i=0; i<materias.length; i++) {%>
<div class="row ma-margen-top-bottom">
  <div class="col-sm-1"></div>
  <div class="col-sm-4">
    <div class="text-center ma-borde ma-padding-top-bottom">
      <h1> <%= materias[i].nombreMateria %></h1>
    </div>
  </div>
  <div class="col-sm-1"></div>
  <div class="col-sm-5 text-center">
    <div class="text-center ma-borde" style="margin-top: 40px;">
      <p>
        <%= materias[i].nombreMateria %>
        <%= materias[i].topicoMateria %>
      </p>
      <p>
        <%= materias[i].fechaCreacion %>
      </p>
    </div>
  </div>
  <div class="col-sm-1">
    <a href="/Materia/BorrarMateria?id=<%= materias[i].id %>" class="btn btn-danger btn-block">X</a>
    <a href="/EditarMateria?id=<%= materias[i].id %>" class="btn btn-info btn-block">Edit</a>

  </div>
</div>
<% }%>


